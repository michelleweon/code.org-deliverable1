<%= form_with(model: horse, local: true, class: "horse-form") do |form| %>
  <% if horse.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(horse.errors.count, "error") %> prohibited this horse from being saved:</h2>
      <ul>
        <% horse.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Horse Name" %>
    <%= form.text_field :name, placeholder: "Enter horse's name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :age, "Age" %>
    <%= form.number_field :age, placeholder: "Age in years", class: "form-control", min: 1, max: 49 %>
  </div>

  <div class="form-group">
    <%= form.label :sex, "Gender" %>
    <%= form.select :sex, [['Stallion (Male)', true], ['Mare (Female)', false]], { prompt: "Select gender" }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :breed, "Breed" %>
    <%= form.text_field :breed, placeholder: "e.g., Arabian, Thoroughbred, Quarter Horse", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :color, "Color" %>
    <%= form.text_field :color, placeholder: "e.g., Bay, Chestnut, Black, Palomino", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :location, "Location" %>
    <%= form.text_field :location, placeholder: "City, State", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :personality, "Personality Traits" %>
    <%= form.text_area :personality, placeholder: "e.g., Energetic, Gentle, Playful, Calm, Spirited (separate with commas)", class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= form.label :bio, "Bio" %>
    <%= form.text_area :bio, placeholder: "Tell us about this horse's personality, interests, and what makes them special...", class: "form-control", rows: 5 %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", horses_path, class: "btn btn-secondary" %>
  </div>
<% end %>
